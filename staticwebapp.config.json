{
    "routes": [
        {
            "route": "/api/*",
            "allowedRoles": [
                "anonymous"
            ]
        }
    ],
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "/api/*",
            "*.{css,scss,js,png,gif,ico,jpg,svg,webp,woff,woff2}"
        ]
    },
    "globalHeaders": {
        "cache-control": "no-cache, no-store, must-revalidate"
    },
    "mimeTypes": {
        ".json": "application/json",
        ".js": "text/javascript",
        ".css": "text/css"
    }
}